@{
    ViewData["Title"] = "Sign Up Confirmation";
}
<html>
<head>
    <style>
        th, td {
            text-align: center;
            width: 100%;
            padding: 5px;
        }
    </style>
</head>
<body>

    <table style="width: 40%;">
        <tr>
            <th>
                <h2>Thank you for registration!!</h2>
            </th>
        </tr>
        <tr><td><br /></td></tr>
        <tr>
            <td>
                <h4>
                    Account with user name "@ViewBag.UserName" was successfully created!!
                </h4>
            </td>
        </tr>
        <tr><td><br /></td></tr>
        <tr>
            <td>
                <form method="get" asp-controller="Home" asp-action="SignIn">
                    <b><input style="width: 20%;" type="submit" value="OK" /></b>
                </form>
            </td>
        </tr>
    </table>

</body>
</html>


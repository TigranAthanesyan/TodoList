@model List<Todo>
@{
    ViewData["Title"] = "List";
}

<html>
<body>
    <br /><br /><br /><br />
    <form method="post" asp-controller="Home" asp-action="Add">
        <input type="hidden" value="@ViewBag.PersonId" name="PersonId" />
    <table>
        <tr>
            <th>What</th>
            <th>Time</th>
            <th></th>
        </tr>
        @foreach (Todo todo in Model)
        {
        <tr>
            <td>@todo.What</td>
           @{if (todo.DeadLine == DateTime.Today)
            {
                <td>Today</td>
            }
            else if (todo.DeadLine == DateTime.Today.AddDays(1))
            {
                <td>Tomorrow</td>
            }
            else
            {
                <td>@todo.DeadLine.ToString("yyyy/MM/dd")</td>
            }
            }
            <td><a asp-controller="Home" asp-action="Complete" asp-route-PersonId=@todo.PersonId asp-route-what=@todo.What
                   asp-route-deadline=@todo.DeadLine>Complete</a> </td>
            @*<td><a asp-controller="Home" asp-action="Complete" asp-route-todo=@todo>Complete</a> </td>*@
        </tr>
        }
        <tr>
            <td><input type="text" name="What"></td>
            <td><input type="text" name="DeadLine"></td>
            <td><input type="submit" value="Add node"></td>
        </tr>
    </table>
        </form>
</body>
</html>
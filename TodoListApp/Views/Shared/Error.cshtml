@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}
<head>
    <style>
        th, td {
            text-align: center;
            width: 100%;
            padding: 5px;
        }
        h1, h3 {
            color: #a94442;
        }
    </style>
</head>
<body>
    <table style="width: 40%;">
        <tr>
            <th>
                <h1>Error!!</h1>
            </th>
        </tr>
        <tr><td><br /></td></tr>
        <tr>
            <td>
                <h3>
                    An error occurred while processing your request
                </h3>
            </td>
        </tr>
        <tr><td><br /></td></tr>
        <tr>
            <td>
                @if (Model.Message != null)
                {
                    <p>
                        <strong>Error Message:</strong> <code>@Model.Message</code>
                    </p>
                }
            </td>
        </tr>
        <tr><td><br /></td></tr>
        <tr>
            <td>
                <form method="get" asp-controller="Home" asp-action=@Model.ActionName>
                    <b><input style="width: 20%;" type="submit" value="OK" /></b>
                </form>
            </td>
        </tr>
    </table>
</body>